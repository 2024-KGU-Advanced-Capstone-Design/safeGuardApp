<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="7dp" />
            <gradient android:angle="270" android:endColor="#2dabf9" android:startColor="#0688fa" android:type="linear" /> <!-- 수정: 버튼의 배경 색상 -->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="130dp" android:height="45dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="7dp" />
            <gradient android:angle="270" android:endColor="#0688fa" android:startColor="#2dabf9" android:type="linear" /> <!-- 수정: 버튼의 배경 색상 -->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="130dp" android:height="45dp" />
        </shape>
    </item>
</selector>
