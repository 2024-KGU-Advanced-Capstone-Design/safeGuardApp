<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입하기"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="이름을 입력해주세요"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="이메일 입력을 입력해주세요"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:layout_marginBottom="0dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/O_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용 가능한 이메일입니다"
                android:textColor="#329632"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/X_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="올바르지 않은 이메일 형식입니다"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="17sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/inputPW"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="비밀번호 설정(최소 8자리)"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:layout_marginBottom="0dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/X_PW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="비밀번호는 8자리 이상으로 설정해주세요"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/X_PW2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="특수문자, 알파벳, 숫자 중 2가지 이상 사용해야 합니다"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:visibility="invisible" />

        </FrameLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="17sp"
            android:layout_marginTop="0dp"
            />

        <EditText
            android:id="@+id/inputPW_re"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/X_PW_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다시 입력해주세요"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:visibility="invisible"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.widget.Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="16sp"
                android:background="@drawable/button_grey_version"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"
                />

            <android.widget.Button
                android:id="@+id/signUp_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="가입하기"
                android:textSize="16sp"
                android:background="@drawable/button_grey_version"
                android:clickable="false"
                android:layout_weight="1"
                />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
