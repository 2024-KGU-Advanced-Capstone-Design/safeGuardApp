<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/findIDToName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/signup_edittext_design"
                android:hint="이름을 입력해주세요"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/findIDToEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/signup_edittext_design"
                android:hint="이메일을 입력해주세요"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/Check_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름과 이메일을 확인해주세요"
                android:textColor="#ff0000"
                android:textSize="12dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <android.widget.Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/signup_button_grey_version"
                    android:text="취소"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp" />


                <android.widget.Button
                    android:id="@+id/find_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/signup_button_blue_version"
                    android:text="아이디 찾기"
                    android:textSize="18dp"
                    android:textColor="#5E53A6"/>

            </LinearLayout>
        </LinearLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center"
        android:background="@color/navy1"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@color/white"
        app:title="아이디 찾기"
        app:titleCentered="true"
        app:titleTextColor="@color/white"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>